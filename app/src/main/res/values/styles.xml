<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DetailTitle" parent="AppTheme.NoActionBar">
        <item name="android:textSize">@dimen/text_size_mid</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DetailText" parent="AppTheme.NoActionBar">
        <item name="android:textSize">@dimen/text_size_def</item>
    </style>
    <style name="DetailRate" parent="AppTheme.NoActionBar">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

</resources>
